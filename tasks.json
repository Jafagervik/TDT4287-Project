{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with module support",
            "command": "cl.exe",
            "args": [
                "${workspaceFolder}/main.cpp",
                "/Fe:",
                "${workspaceFolder}/main.exe",
                "/Zi",
                "/EHsc",
                "/MD",
                "/experimental:module",
                "/std:c++latest"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}